/* pages/wode/wode.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ffffff;
  width: 100%; 
  height: 300rpx;
}
.userinfo-btn{
  margin-top: 50rpx;
  background: none !important;
  color: #fff !important;
  font-size: 40rpx;
}
.account-bg {
  width: 100%;
  height: 150rpx;
}
.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 40rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: rgb(0, 0, 0);
  font-size:24rpx;
  margin-top: 10rpx;
}
/* 订单 */
.order {
  display: flex;
  flex-direction: row;
  align-items: center;
  width:100%;

  height:80rpx;
}
.myorder-text{
  font-size:24rpx;
  color: gray;
  line-height: 80rpx;
  width: 100%;
  text-align: center;
}

 .nav-item{
 display:flex;
 flex-direction: row;
 align-items:center;
 width:100%;
 height:90rpx;
}
.navs {
  display: flex;
  flex-flow: row nowrap;
  width: 100%;
}
.tp{
  width:33.3%;
  margin: 0 auto;
  height: 100rpx;
}
 .tp .nav-image1,.tp .nav-image2,.tp .nav-image3 {
  width:60rpx;
  height:60rpx;
  position:relative;
  left:38%;
  bottom:-20rpx;
} 

.navs text.a,.navs text.b,.navs text.c{
  font-size:24rpx;
  position:relative;
  color: gray;
  width:33.3%;
  height: 50rpx;
  text-align: center;
}
