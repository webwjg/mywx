/* 列表 */
.person-list {
  display: flex;
  flex-flow: column wrap;
  align-items: left;
}
.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 110rpx;
  width:100%;
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.item-text {
  width: 80%;
  color: gray;
  font-size:24rpx;
  height:50rpx;
  margin-left: 20rpx;border-bottom: 1rpx solid rgba(0, 0, 0, 0.151);
}