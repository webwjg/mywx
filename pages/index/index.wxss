.slider,.slider swiper{
  width:100%;
  height: 400rpx;
  overflow: hidden;
  border-radius: 10px;
}
.slider image{
  width: 100%;
}
.cc{
  width:100%;
  height:100rpx;
  margin-top:12rpx;
  text-align: center;
  border:0;
  margin-bottom: 12rpx;
  background: rgba(160, 204, 110, 0.767);
  border-radius: 10rpx;
  /* border-bottom: 1rpx solid rgba(0, 0, 0, 0.199); */
}
/*精品 */
.cc-text{
  line-height: 120rpx;
  position:relative;
  color:rgb(255, 255, 255);
  font-size:13px;  
}

/*鲜豌豆*/
.jd-text{
  font-size: 12px;
  color: #666;
}
.jd-text .p1{
   margin-bottom: 20rpx;
}
.jd-text-wr{
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}
/* 横向滑动条图样式 */
.jd-huadongtiao{
width: 100%;
background-color: #fff;
}
.jd-image-group{
  display: flex;
  white-space: nowrap;
  margin-bottom: 25rpx;
}
.jd-image-group image{
  width: 250rpx;
  height: 280rpx;
  border-bottom: 1rpx solid #ddd;
}
.jd-image-group .jd-image-div{
  text-align: center;
  display: inline-block;
  margin-top: 25rpx;
  border-radius: 10rpx;
}

.wd{
  display:flex; /*弹性布局*/
 flex-wrap: wrap; /*换行*/
}
.wd-wraper{
  width:25%;  /*商品元素*/
  box-sizing:border-box; 
  display:flex;    /*父元素 img text*/ 
  flex-direction: column; /*img text案列排放*/
  justify-content: center; /*居中水平*/
  align-items: center; /*垂直*/
  font-size:24rpx;
  height:300rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.212);
}

.wd-wraper image{
  width: 150rpx;
  height:120rpx;
  border-radius: 20rpx;
}
.wd-text{
  font-size:24rpx;
  display: inline;
  color: #666;
  text-align: center;
}
/*搜索*/
.ss{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ss input{
  width: 600rpx;
  border-radius: 30rpx;
  background: #ddd;
  font-size: 14px;
  color: #ccc;
  padding-left:50rpx; 
}

.last{
  border-top:1rpx solid #ccc;
  margin-top:30rpx;
  padding-top:40rpx;
}
.last-in{
  width:350rpx;
  border:1px solid #ccc;
  border-radius: 50rpx;
  margin-left:30%;
}
.last-in image{
   height:50rpx;
   width:50rpx;
   padding-right: 20rpx;
}