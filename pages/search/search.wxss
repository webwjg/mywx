/* pages/search/search.wxss */
.search{
background:#eee;
width:100%;
margin-top: 12rpx;
height:80rpx;
border:1rpx solid black;
border-radius: 20rpx;
overflow: hidden;
position:relative;
}
input{
  width:80%;
  height:100%;
  border:relative;
  font-size:24rpx;
  text-align:center;
  background:#fff;
  position:absolute;
}
.search button{
font-size: 24rpx;
width:20%;
border:0;
height:100%;
line-height:80rpx;
right: 0;
position:absolute;
background:#fff;
color:rgb(107, 98, 98);
}
.cc{
  width:100%;
  display: flex;
  flex-flow: row wrap;
  text-align: center;
  border-bottom:2rpx solid rgba(0, 0, 0, 0.137);
  height: 100rpx;
}
.cc image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
}
.cc span{
  width: 80%;
  color:red;
  font-size: 24rpx;
  line-height: 100rpx;
  text-align:right;
}
